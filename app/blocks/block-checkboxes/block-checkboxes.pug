                span глазомером
                span всё
                span ок
        +input-checkbox(inputClass, {
            labelText: 'Читаю',
            labelClass: 'input-checkbox__label--offset input-checkbox__label--box-offset',
            inputAttr: {
                id: 'read-blog'
            }
        })
            block label
                a(href='http://blog.csssr.ru/') blog.csssr.ru
        +input-checkbox(inputClass, {
            labelText: 'Я ленивый(-ая)',
            labelClass: 'input-checkbox__label--offset input-checkbox__label--box-offset',
            inputAttr: {
                id: 'lazy'
            }
        })
        +input-checkbox(inputClass, {
            labelText: 'У меня хороший английский',
            labelClass: 'input-checkbox__label--offset input-checkbox__label--box-offset',
            inputAttr: {
                id: 'english',
                checked: true
            }
        })
